@using IcelandAndI.Business.ExtensionMethods
@using IcelandAndI.Models.ViewModels
@using IcelandAndI.Models.Pages
@model IPageViewModel<SitePageData>


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Model.CurrentPage.MetaTitle ?? Model.CurrentPage.Name)</title>
    <meta name="keywords" content="@Model.CurrentPage.MetaKeywords" />
    <meta name="description" content="@Model.CurrentPage.MetaDescription" />

    <link href="https://fonts.googleapis.com/css?family=Karla:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/Static/css/animate.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Static/css/icomoon.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Static/css/bootstrap.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Static/css/flexslider.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Static/css/style.css")" />
    <!--<script type="text/javascript" src="Url.Content(" ~/Static/js/jquery.js")"></script>-->
    <script src="@Url.Content("~/Static/js/modernizr-2.6.2.min.js")"></script>
</head>

<body>

    @Html.Partial("_TopNavigation", Model)

    @Html.RenderEPiServerQuickNavigator()
    @Html.FullRefreshPropertiesMetaData()

    <div id="fh5co-page">
        <header>
            <div class="container">
                <div class="fh5co-navbar-brand">
                    <div class="row">
                        <div class="col-xs-6">
                            <h1 class="text-left"><a class="fh5co-logo" href="index.html"> <span>Welcome to</span>ICELAND &amp; I<span>Tourguide</span></a></h1>
                        </div>
                        <div class="col-xs-6">
                            <p class="fh5co-social-icon text-right">
                                <a href="https://www.twitter.com/" target="_blank"><i class="icon-twitter2"></i></a>
                                <a href="https://www.facebook.com/" target="_blank"><i class="icon-facebook2"></i></a>
                                <a href="https://www.instagram.com/" target="_blank"><i class="icon-instagram"></i></a>
                                <a href="https://www.youtube.com/" target="_blank"><i class="icon-youtube"></i></a>
                            </p>
                        </div>
                    </div>
                    <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
                </div>
            </div>
        </header>
        <aside id="fh5co-hero" class="js-fullheight">
            <div class="flexslider js-fullheight">

                @*Image and text slider for header*@
                <ul class="slides">
                    <li style="background-image: url(@Url.ContentUrl(Model.CurrentPage.PageImage));">
                        <div class="overlay-gradient"></div>
                        <div class="container">
                            <div class="col-md-8 col-md-offset-2 col-md-push-4 js-fullheight slider-text">
                                <div class="slider-text-inner">
                                    <div class="desc">
                                        <span>@Html.PropertyFor(m => m.CurrentPage.Introduction)</span>
                                        <h2>@Html.PropertyFor(m => m.CurrentPage.PageTitle)</h2>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </liv>
                </ul>
            </div>
        </aside>

        @RenderBody()


        @Html.Partial("_Footer", Model)



    </div>



    <!-- jQuery -->
    <script src="@Url.Content("~/Static/js/jquery.min.js")"></script>
    <!-- jQuery Easing -->
    <script src="@Url.Content("~/Static/js/jquery.easing.1.3.js")"></script>
    <!-- Bootstrap -->
    <script src="@Url.Content("~/Static/js/bootstrap.min.js")"></script>
    <!-- Waypoints -->
    <script src="@Url.Content("~/Static/js/jquery.waypoints.min.js")"></script>
    <!-- Counters -->
    <script src="@Url.Content("~/Static/js/jquery.countTo.js")"></script>
    <!-- Flexslider -->
    <script src="@Url.Content("~/Static/js/jquery.flexslider-min.js")"></script>
    <!-- Main JS (Do not remove) -->
    <script src="@Url.Content("~/Static/js/main.js")"></script>




</body>

</html>
