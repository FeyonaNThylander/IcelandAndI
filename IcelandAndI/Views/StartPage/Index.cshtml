@using IcelandAndI.Models.ViewModels
@using EPiServer.Web.Mvc.Html
@model PageViewModel<IcelandAndI.Models.Pages.StartPage>

@{
    Layout = "~/Views/Shared/Layouts/_Root.cshtml";
}


@****WELCOME SECTION****@


<div id="fh5co-page">
    <div id="fh5co-intro-section">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center">
                    <br />
                    <br />
                    <h1 class="intro-heading">@Html.PropertyFor(m => m.CurrentPage.Heading)</h1>
                    <p><span>@Html.PropertyFor(m => m.CurrentPage.MainBody)</span></p>
                </div>
            </div>
        </div>
    </div>

    @*HIGHLIGHT SECTION*@

    <div id="fh5co-featured">
        <div class="container-fluid">
            <div class="row">
                <div class="post-entry">
                    <div class="col-md-6 col-md-push-6 nopaddingbottom animate-box">
                        <div class="post-image" style="background-image: url(@Url.ContentUrl(Model.CurrentPage.PageImage));"></div>
                    </div>
                    <div class="col-md-6 col-md-pull-5 animate-box">
                        <div class="display-tc">
                            <div class="desc">
                                <span class="date">@Html.PropertyFor(m => m.CurrentPage.HighlightTitle)</span>
                                <h3>@Html.PropertyFor(m => m.CurrentPage.ActivityHighlightTitle)</h3>
                                <p>@Html.PropertyFor(m => m.CurrentPage.ActivityHighlightText)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*RECENT ACTIVITIES SECTION*@

    <div id="fh5co-blog" class="fh5co-bg-section" style="background-color: lightgray;">
        <div class="container">
            <div class="row animate-box">
                <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                    <h2 style="padding-top: 90px">@Html.PropertyFor(m => m.CurrentPage.RecentActivitiesTitle)</h2>
                    <p>@Html.PropertyFor(m => m.CurrentPage.RecentActivitiesText)</p>
                </div>
            </div>
            <div class="row" style="display: inline-block;float: left;padding-bottom: 10rem;">

                @Html.PropertyFor(m => m.CurrentPage.ContentBlockArea)
                <br />
                <br />
                <br />
                <br />
                @Html.PropertyFor(m => m.CurrentPage.ListingContentArea)

            </div>
        </div>
    </div>

</div>
