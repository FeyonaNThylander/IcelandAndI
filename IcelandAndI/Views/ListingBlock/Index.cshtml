@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@model IcelandAndI.Models.ViewModels.ListingBlockViewModel
@if (Model.Pages != null)
{

    <div class="row animate-box">
        <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">

            @if (EPiServer.Editor.PageEditing.PageIsInEditMode)
            {
                <div class="label label-warning">Set the ShowChildrenOfThisPage property to a page.</div>
            }
            else
            {

                <h2 style="margin-top: 40px;"@Html.EditAttributes(x => x.Heading)>@Model.Heading</h2>

                if (Model.Pages.Count() == 0)
                {
                    <div class="label-warning">The page selected has no children</div>
                }
                foreach (PageData page in Model.Pages)
                {
                    <h3>@Html.ContentLink(page.ContentLink)</h3>
                    if (page.StartPublish.HasValue)
                    {
                        <p class="date">Published on @page.StartPublish.Value.ToString("dddd, d MMMM yyyy")</p>
                    }
                }
            }
        </div>
    </div>


}
